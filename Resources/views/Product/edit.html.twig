{% extends 'ZIMZIMCategoryProductBundle::layout.html.twig' %}

{% trans_default_domain 'ZIMZIMCategoryProduct' %}

{% block title %}
    {{ 'adminproduct.update.title'|trans({'%name%': entity.name}) }}
{% endblock title %}

{% block page %}
    <div class="row">
        <div class="small-12 columns">
            <h1 class="text-center headerpagehome">
                {{ 'adminproduct.update.title'|trans({'%name%': entity.name}) }}
            </h1>
        </div>
    </div>

    {% include 'ZIMZIMCategoryProductBundle:Product:include/link-product.html.twig' with {'entity': entity} %}

    <div class="row">
        <div class="small-12 columns panel">
            {{ form(edit_form) }}
        </div>
    </div>

    <div class="row">
        <div class="small-12 large-4 columns text-center">
            <a class="tiny button" href="{{ path('zimzim_categoryproduct_product') }}">
                {{ 'button.return'|trans }}
            </a>
        </div>
        <div class="small-12 large-4 columns text-center">
            {{ form(delete_form) }}
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    {% include 'ZIMZIMCategoryProductBundle::tinymce.html.twig' %}

{% endblock %}
