{% if child.slug == "" %}
    {% set linkchild = path('zimzim_categoryproduct_category_listslugnull') %}
{% else %}
    {% set linkchild = path('zimzim_categoryproduct_category_listslug', {'slug':child.slug}) %}
{% endif %}

<li class="category-box">
    <div class="fullfull">
        <img class="img-medium" src="/{{ child.webpath }}"
             alt="{{ child.name }} - {{ child.description }}" />
        <h2 class="text-center title-categorybox nomargin">
            <a href="{{ linkchild }}">
                {{ child.name }}
            </a>
        </h2>
    </div>
</li>