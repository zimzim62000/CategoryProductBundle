{% extends 'ZIMZIMCategoryProductBundle::layout.html.twig' %}

{% trans_default_domain 'ZIMZIMCategoryProduct' %}

{% block title %}
    {{ 'adminitemhome.show.title'|trans({'%name%': entity.name }) }}
{% endblock title %}

{% block page %}
    <div class="row">
        <div class="small-12 columns">
            <h1 class="text-center headerpagehome">
                {{ 'adminitemhome.show.title'|trans({'%name%': entity.name }) }}
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="small-12 columns">
            <table class="width-100 panel">
                <tbody>
                    <tr>
                        <th>Id</th>
                            <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                            <td>{{ entity.title }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                            <td>{{ entity.description }}</td>
                    </tr>
                    <tr>
                        <th>image</th>
                        <td><img src="/{{ entity.webpath }}" style="max-height:50px;"/></td>
                    </tr>
                    <tr>
                        <th>Position</th>
                        <td>{{ entity.position }}</td>
                    </tr>
                </tbody>
            </table>

                        <div class="row">
    <div class="small-12 large-4 columns text-center">
        <a class="tiny button round" href="{{ path('zimzim_categoryproduct_itemhome') }}">
            {{ 'button.return'|trans }}
        </a>
    </div>
    <div class="small-12 large-4 columns text-center">
        <a class="tiny button round" href="{{ path('zimzim_categoryproduct_itemhome_edit', { 'id': entity.id }) }}">
            {{ 'button.update'|trans }}
        </a>
    </div>
    <div class="small-12 large-4 columns text-center">
        {{ form(delete_form) }}
    </div>
</div>
        </div>
    </div>
{% endblock %}
